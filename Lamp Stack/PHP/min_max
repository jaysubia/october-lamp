
function min_max(){

	$sample = array( 135, 2.4, 2.67, 1.23, 332, 2, 1.02); 





	$min = $sample[0];
	$max = $sample[0];
	for ($i=0; $i < count($sample) ; $i++) { 

		if($sample[$i] > $max){
			$max= $sample[$i];
		}

		if($sample[$i] < $min){
			$min = $sample[$i];
		}
	}

	echo $min . " " . $max;

}

min_max();


